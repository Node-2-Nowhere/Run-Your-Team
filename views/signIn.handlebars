<link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="stylesheet" href="./css/signIn.css" />
  </head>
  <body class="container">
    <header class="pb-3 px-2 row">
      <div class="jumbotron p-5 bg-body rounded-3 col-12">
        <h1 class="display-4 fw-bold text-white">Track Your Team</h1>
        <div class="container-fluid py-3">
          <p class="col-xl-12 text-white fs-1">
            Finally, a tracking resource that allows sports fans to follow all
            their favorite teams in all their favorite sports. Get ready to
            start tracking wins and losses!
          </p>
        </div>
      </div>
    </header>
    <main class="row">
      <div class="container"></div>
      <div class="row"></div>
      <section class="form-create container">
        <div class="wrapper row">
          <form class="col-md-6 col-12" id="signIn">
            <h2 class="h4 mt-3 mb-2 text-white fw-bold">Please sign in</h2>
            <div class="form-floating">
              <input
                type="email"
                class="form-control emailSign"
                id="floatingInput"
                placeholder="name@example.com"
              />
              <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
              <input
                type="password"
                class="form-control passwordSign"
                id="floatingPassword"
                placeholder="Password"
              />
              <label for="floatingPassword">Password</label>
            </div>
            <div class="checkbox mb-2"></div>
            <button
              id="signInID"
              class="w-100 btn btn-lg btn-primary"
              type="submit"
            >
              Sign in
            </button>
          </form>

          <form class="col-md-6 col-12" id="createAccount">
            <h2 class="h4 mt-3 mb-2 text-white fw-bold">Create an Account</h2>
            <div class="form-floating">
              <input
                type="email"
                class="form-control emailAcct"
                id="floatingInput2"
                placeholder="name@example.com"
              />
              <label for="floatingInput2">Email address</label>
            </div>
            <div class="form-floating">
              <input
                type="password"
                class="form-control passwordAcct"
                id="floatingPassword2"
                placeholder="Password"
              />
              <label for="floatingPassword2">Password</label>
            </div>
            <div class="checkbox mb-2"></div>
            <button
              id="accountID"
              class="w-100 btn btn-lg btn-primary"
              type="submit"
            >
              Create Account
            </button>
          </form>
        </div>
      </section>
    </main>
    <footer class="mt-4 text-muted row">
      <div>
        <h3 class="mb-4 fw-bold text-center text-warning">
          Track Your Team was developed by Node2Nowhere
        </h3>
      </div>
      <div>
        <h4 class="fw-bold text-center text-white">
          Framework Courtesy of Bootstrap
        </h4>
      </div>
    </footer>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  <script src="/js/login.js"></script>
</html>

